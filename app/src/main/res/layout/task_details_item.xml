<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/task_details_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="23dp"
        android:background="@drawable/boder_left_adadad"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/head_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/boder_bottom_adadad"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/head_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/boder_rounded_6ca8cd"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="3dp"
                android:text="ssss"
                android:textColor="@color/c4169E1"
                android:textSize="13sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/body_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/boder_bottom_adadad"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/body_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/c000000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/body_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/c000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/body_remark_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/body_name_text"
                    android:layout_alignLeft="@id/body_name_text"
                    android:text=""
                    android:textColor="@color/c666666"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/body_volume_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/body_name_text"
                    android:layout_alignLeft="@id/body_name_text"
                    android:text=""
                    android:textColor="@color/c666666"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/body_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/body_name_text"
                    android:layout_alignLeft="@id/body_name_text"
                    android:text=""
                    android:textColor="@color/c666666"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/body_dec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/body_name_text"
                    android:layout_alignLeft="@id/body_name_text"
                    android:text=""
                    android:textColor="@color/c666666"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/task_details_checkbox_lay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7">
                <CheckBox
                    android:id="@+id/task_details_checkbox"
                    style="@style/CustomCheckboxTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:scaleX="0.3"
                    android:scaleY="0.3" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/head_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/boder_rounded_c6ca6cd"
        android:gravity="center"
        android:textColor="@color/ffffff"
        android:textSize="16sp" />
</RelativeLayout>
