<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/picture_RL"
        android:layout_width="90dp"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/picture_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/picture_clean_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:text="@string/close1_icon"
            android:textColor="@color/ffffff"
            android:textSize="18sp"
            android:layout_marginRight="3dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_picture_RL"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/boder_c0076ff">

        <TextView
            android:id="@+id/picture_add_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c0076ff"
            android:textSize="35sp"
            android:text="@string/add_icon"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
</LinearLayout>