<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/qiangdan_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/boder_c6ca6cd"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/qiangdan_item_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="sssssss"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/c6CA6CD"
        android:id="@+id/qiangdan_item_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/qiangdan_item_trans_no"
            android:layout_width="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/ffffff"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/qiangdan_item_route_name"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:text="线路："
            android:layout_marginLeft="10dp"
            android:textColor="@color/ffffff"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/qiangdan_item_remark"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:text="运输时间："
            android:layout_marginLeft="10dp"
            android:textColor="@color/ffffff"
            android:layout_height="wrap_content" />
        </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:text="抢单"
                    android:layout_weight="3"
                    android:background="@drawable/boder_rounded_ffffff_ffffff"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_height="40dp">

                </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/ffffff"></LinearLayout>
    </LinearLayout>

</LinearLayout>
